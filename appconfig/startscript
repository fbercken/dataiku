#!/bin/bash
#
# Copyright 2016 (c) BlueData Software, Inc.
#
#

set -o pipefail
SELF=$(readlink -nf $0)
export CONFIG_BASE_DIR=$(dirname ${SELF})

source ${CONFIG_BASE_DIR}/logging.sh
source ${CONFIG_BASE_DIR}/utils.sh

if [[ "$1" == "--addnodes" ]]; then
    ## Nothing to do on the existing nodes when we receive this notification.
    exit 0
elif [[ "$1" == "--delnodes" ]]; then
    ## Nothing to do on the existing nodes when we receive this notification.
    exit 0
elif [[ "$1" == "--configure" ]]; then
    log "Starting configuration ... "

    ## Fall through to start the configuration.
else
    echo "ERROR: Unknown command line option(s): '$@'"
    exit 10
fi

source ${CONFIG_BASE_DIR}/macros.sh

####################### AUTOGENERATED CODE STARTS BELOW #######################
#
if  [[ "${ROLE}" == 'controller' ]]; then
    [ ! -d '/opt/hadoop/conf' ] && mkdir -vp /opt/hadoop/conf
    cp -rvf ${CONFIG_BASE_DIR}/hadoop_conf/core-site.xml /opt/hadoop/conf/core-site.xml
fi

if  [[ "${ROLE}" == 'controller' ]]; then
    [ ! -d '/opt/hadoop/conf' ] && mkdir -vp /opt/hadoop/conf
    cp -rvf ${CONFIG_BASE_DIR}/hadoop_conf/hdfs-site.xml /opt/hadoop/conf/hdfs-site.xml
fi

if  [[ "${ROLE}" == 'controller' ]]; then
    [ ! -d '/opt/hadoop/conf' ] && mkdir -vp /opt/hadoop/conf
    cp -rvf ${CONFIG_BASE_DIR}/hadoop_conf/log4j.properties /opt/hadoop/conf/log4j.properties
fi

if  [[ "${ROLE}" == 'controller' ]]; then
    [ ! -d '/opt/hadoop/conf' ] && mkdir -vp /opt/hadoop/conf
    cp -rvf ${CONFIG_BASE_DIR}/hadoop_conf/hadoop-env.sh /opt/hadoop/conf/hadoop-env.sh
fi

[ ! -d '/etc/systemd/system/' ] && mkdir -vp /etc/systemd/system/
cp -rvf ${CONFIG_BASE_DIR}/dss.service /etc/systemd/system/dss.service

if  [[ "${ROLE}" == 'controller' ]]; then
    REPLACE_PATTERN @@@@FQDN@@@@ /opt/hadoop/conf/core-site.xml GET_NODE_FQDN
fi


REGISTER_START_SERVICE_SYSCTL dss dss
